include layout/utils

mixin main-hero(props)
    -
        props = Object.assign({
            isSlider: true,
            slides: [
                    {
                        image: require('assets/content/main-hero/1.png'),
                        title: 'Доставка негабаритного оборудования из Китая',
                        description:'Экспертные решения для перевозки ценностей:  от бронированного транспорта до строгой конфиденциальности. Гарантия сохранности  и своевременной доставки в любую точку мира'
                    },{
                        image: require('assets/content/main-hero/2.jpg'),
                        title: 'Комплекс услуг по транспортировке  ценных грузов ',
                        description:'Экспертные решения для перевозки ценностей:  от бронированного транспорта до строгой конфиденциальности. Гарантия сохранности  и своевременной доставки в любую точку мира'
                    },
                ]
        }, props || {})

    +section({container:false}).main-hero.swiper(class=`${props.isSlider ? 'main-hero__slider' : ''}`)
        .swiper-wrapper
            each slide, index in props.slides
                .main-hero__slide.swiper-slide(data-id=`${index}`)
                    picture
                        source(srcset=require('assets/content/main-hero/2.jpg'), media='(max-width:1000px)')
                        +img(slide.image)
                    .main-hero__slide-content
                        if props.isSlider
                            .line
                            h1.main-hero__slide-title= slide.title
                            .main-hero__slide-description= slide.description
                        else
                            h1.main-hero__slide-title= slide.title
                            .line
                            .main-hero__slide-description= slide.description
        if props.isSlider
            .main-hero__controls
                .main-hero__navigation
                    button.main-hero__navigation-prev
                    button.main-hero__navigation-next
                .main-hero__pagination
